<html>
  <head>
    <title>Blog Detail</title>
    <link rel="stylesheet" href="./css/blog.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <nav>
      <div class="nav-left">
          <ul>
              <li>
                  <img src="/images/logo.png" alt="logo" />
              </li>
              <li class ="item-collapse menu" >
                  <a href="/index1" style="text-decoration:none">Home</a>
              </li>
              <li class="item-collapse menu">
                  <a href="/addblog" style="text-decoration:none">My Project</a>
              </li>
              <li class="item-collapse nav-item me-2 menu">
                  <a class="nav-link" href="/testimonial">Testimonials</a>
              </li>
          </ul>
      </div>
      <div class="nav-right item-collapse">
          <a href="/contact1" style="text-decoration:none">Contact Me</a>
      </div>
      <div class="nav-right" id="barsmenu">
       <button style="background-color: transparent; border:none;cursor:pointer;" 
               onclick="openHamburger()">
          <i class="fa-2x fa-solid fa-bars"></i>
       </button>   
      </div>
  </nav>
  <div class="hamburger-nav-container" id="hamburger-nav-container">
    <a class="fs-dark" href ="/index1" style="text-decoration:none">Home</a>
    <a href="/addblog" class="hamburger-active" style="text-decoration:none">My Project</a>
    <a href="/contact1" style="text-decoration:none">Contact Me</a>
    <a href="/testimonial" style="text-decoration:none">Testimonial</a>
  </div>
    {{#each blogs}}
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{this.title}}</h1>
        <div class="techdetail">
          <div style="width: 100%; height: 100%;">
            <img src="/images/1.jpg" alt="" />
          </div>
          <div style="width: 100%;">
            <p style = "margin-left: 30px;">Duration: </p>
              <div>
                <i class="fa-solid fa-calendar-days" 
                   style="margin-bottom: 20px; margin-left: 30px; margin-right: 10px;">{{this.date}}</i><br>
                <i class="fa-solid fa-clock" 
                   style="margin-left: 30px;">{{projectDuration}}</i><br>
              </div>
            <p style = "margin-left: 30px;">Technologies:</p>
              <div class="icon fa-3x text-dark" style="margin-left: 30px">
              {{#if this.nodeJs}}
                <a href=""><i class="fa-brands fa-node"></i></a>
              {{/if}}
              {{#if this.reactJs}}
                <a href=""><i class="fa-brands fa-react"></i></a>
              {{/if}}
              {{#if this.java}}
                <a href=""><i class="fa-brands fa-java"></i></a>
              {{/if}}
              {{#if this.php}}
                <a href=""><i class="fa-brands fa-php"></i></a>
              {{/if}}
              </div>
          </div>
        </div>
        <p>
          {{this.content}}
        </p>
      </div>
    </div>
    {{/each}}
  </body>
  <script src="/js/index.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>
